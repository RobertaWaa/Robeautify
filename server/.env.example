# Email Configurations (use a test or placeholder account)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_or_placeholder

# Server
PORT=5000

# JWT authentication (key must be generated anew for each environment)
JWT_SECRET=your_random_jwt_secret_here

# Database (changes depending on environment)
DB_HOST=localhost
DB_USER=your_database_username
DB_PASSWORD=your_database_password
DB_NAME=your_database_name

# Google OAuth Client ID (for authentication)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com